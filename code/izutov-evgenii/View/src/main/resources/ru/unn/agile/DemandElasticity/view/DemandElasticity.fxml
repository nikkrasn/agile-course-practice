<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Group?>
<?import ru.unn.agile.DemandElasticity.viewmodel.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.unn.agile.DemandElasticity.view.DemandElasticity">
   <fx:define>
      <ViewModel fx:id="viewModel" />
   </fx:define>
   <children>
      <VBox alignment="TOP_CENTER" layoutX="6.0" spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Group>
               <children>
                  <VBox>
                     <children>
                        <Label minWidth="-Infinity" text="First field" HBox.hgrow="ALWAYS">
                           <VBox.margin>
                              <Insets bottom="4.0" />
                           </VBox.margin>
                        </Label>
                        <HBox>
                           <children>
                              <Label minWidth="-Infinity" text="Start">
                                 <HBox.margin>
                                    <Insets right="5.0" />
                                 </HBox.margin>
                              </Label>
                              <TextField fx:id="txtRange1Start" />
                              <Separator prefWidth="70.0" visible="false" />
                              <Label minWidth="-Infinity" text="Finish">
                                 <HBox.margin>
                                    <Insets right="5.0" />
                                 </HBox.margin>
                              </Label>
                              <TextField fx:id="txtRange1Finish" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </Group>
            <Group>
               <children>
                  <VBox>
                     <children>
                        <Label minWidth="-Infinity" text="Second field" HBox.hgrow="ALWAYS">
                           <VBox.margin>
                              <Insets bottom="4.0" />
                           </VBox.margin></Label>
                        <HBox>
                           <children>
                              <Label minWidth="-Infinity" text="Start">
                                 <HBox.margin>
                                    <Insets right="5.0" />
                                 </HBox.margin></Label>
                              <TextField fx:id="txtRange2Start" />
                              <Separator prefWidth="70.0" visible="false" />
                              <Label minWidth="-Infinity" text="Finish">
                                 <HBox.margin>
                                    <Insets right="5.0" />
                                 </HBox.margin></Label>
                              <TextField fx:id="txtRange2Finish" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </Group>
            <HBox>
               <children>
                  <ComboBox fx:id="cbDemandElasticityType" items="${viewModel.demandElasticityTypes}" prefWidth="185.0" />
                  <Separator prefWidth="200.0" visible="false" />
                  <Button fx:id="btnCalculate" defaultButton="true" disable="${viewModel.calculationDisabled}" mnemonicParsing="false" text="Calculate" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label minWidth="-Infinity" text="Result:">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin></Label>
                  <Label fx:id="lbResult" minWidth="-Infinity" text="${viewModel.result}" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label minWidth="-Infinity" text="Description:">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="lbDescription" minWidth="-Infinity" text="${viewModel.description}" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label minWidth="-Infinity" text="Status:">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin></Label>
                  <Label fx:id="lbStatus" minWidth="-Infinity" text="${viewModel.status}" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
